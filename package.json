{
  "name": "twitch-midi-bot",
  "version": "0.1.6",
  "description": "",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 0",
    "build": "tsc",
    "lint": "eslint -c .eslintrc.json --ext .ts src/**/*.ts",
    "format": "eslint --fix -c .eslintrc.json --ext .ts src/{,**/}*.ts",
    "watch-build": "tsc -w",
    "serve": "npm run build && npm run start",
    "start": "node ./lib/index.js",
    "ncc": "ncc build src/index.ts -m -o dist -e jzz -e jazz-midi",
    "package": "pkg . -C -o package/TwitchMidiBot",
    "prezip": "cpy .env.template package --rename=.env && cpy config package",
    "zip": "cd package && bestzip ../TwitchMidiBotInstallation.zip * .env",
    "bundle": "npm run ncc && npm run package && npm run zip"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@twurple/api": "^5.0.18",
    "@twurple/auth": "^5.0.18",
    "@twurple/chat": "^5.0.18",
    "@twurple/eventsub": "^5.0.18",
    "@twurple/pubsub": "^5.0.18",
    "chalk": "^4.1.2",
    "clipboardy": "^2.3.0",
    "dotenv": "^16.0.0",
    "harmonics": "^1.1.0",
    "jzz": "^1.4.5",
    "nanotimer": "^0.3.15",
    "webmidi": "^3.0.15"
  },
  "pkg": {
    "assets": [
      "./node_modules/jzz",
      "./node_modules/jazz-midi"
    ],
    "targets": [
      "node14-windows-x64",
      "node14-linux-x64",
      "node14-macos-x64"
    ],
    "outputPath": "package"
  },
  "devDependencies": {
    "@types/nanotimer": "^0.3.0",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "@vercel/ncc": "^0.33.3",
    "bestzip": "^2.2.0",
    "cpy-cli": "^4.1.0",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "pkg": "^5.5.2",
    "prettier": "^2.6.0",
    "typescript": "^4.6.2"
  },
  "prettier": {
    "printWidth": 180,
    "trailingComma": "none",
    "singleQuote": true,
    "tabWidth": 4,
    "endOfLine": "auto"
  },
  "bin": "dist/index.js",
  "preferGlobal": true
}
